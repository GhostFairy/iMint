<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="multi.fclass.iMint.member.dao.IMemberDAO">

<!-- 회원정보 수정 -->
    <update id = "updateuser" parameterType="multi.fclass.iMint.security.dto.User">
        UPDATE imint.member 
        SET mb_thumbnail = {mbThumbnail}, mb_nickname = {mbNickname}, mb_interest = #{mbInterest}
        WHERE (mb_id = #{mbId});
    </update>
	
<!-- 회원탈퇴	 -->
    <update id = "updatedelete" parameterType="multi.fclass.iMint.security.dto.User">
        UPDATE imint.member 
        SET mb_isdelete = 1
        WHERE (mb_id = #{mbId});
    </update>

</mapper>